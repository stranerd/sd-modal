{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"declaration": true,
		"moduleResolution": "Node",
		"lib": [
			"ESNext",
			"ESNext.AsyncIterable",
			"DOM"
		],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
    	},
		"types": [
			"@types/node"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"build",
		"dist"
	]
}
